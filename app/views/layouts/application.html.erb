<!DOCTYPE html>
<html>
  <head>
    <title>BulsamAI</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar">
      <div class="container">
        <%= link_to "Ana Sayfa", root_path, class: "navbar-brand" %>
        
        <div class="nav-links">
          <% if user_signed_in? %>
            <%= link_to "Dashboard", dashboard_path, class: "nav-link" %>
            <%= link_to "Profilim", edit_user_registration_path, class: "nav-link" %>
            <%= link_to "Çıkış Yap", destroy_user_session_path, 
                data: { turbo_method: :delete }, 
                class: "nav-link" %>
          <% else %>
            <%= link_to "Giriş Yap", new_user_session_path, class: "nav-link" %>
            <%= link_to "Kayıt Ol", new_user_registration_path, class: "nav-link" %>
          <% end %>
        </div>
      </div>
    </nav>

    <% if notice %>
      <div class="alert alert-success">
        <%= notice %>
      </div>
    <% end %>
    
    <% if alert %>
      <div class="alert alert-danger">
        <%= alert %>
      </div>
    <% end %>

    <main class="main-content">
      <%= yield %>
    </main>
  </body>
</html>
