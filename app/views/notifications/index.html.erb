<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<script>
document.addEventListener('turbo:before-cache', () => {
  const openAccordions = document.querySelectorAll('[data-accordion-target="content"].open');
  openAccordions.forEach(accordion => {
    const id = accordion.closest('[data-accordion-id]').dataset.accordionId;
    sessionStorage.setItem(`accordion-${id}`, 'open');
  });
});

document.addEventListener('turbo:load', () => {
  const accordions = document.querySelectorAll('[data-accordion-id]');
  accordions.forEach(accordion => {
    const id = accordion.dataset.accordionId;
    const state = sessionStorage.getItem(`accordion-${id}`);
    if (state === 'open') {
      const content = accordion.querySelector('[data-accordion-target="content"]');
      const icon = accordion.querySelector('[data-accordion-target="icon"]');
      if (content) {
        content.classList.add('open');
        content.style.display = 'block';
      }
      if (icon) icon.classList.add('open');
    }
  });
});

document.addEventListener('turbo:frame-load', (event) => {
  if (event.target.id === 'notifications_content') {
    const scrollPosition = sessionStorage.getItem('notifications_scroll');
    if (scrollPosition) {
      window.scrollTo(0, parseInt(scrollPosition));
      sessionStorage.removeItem('notifications_scroll');
    }
  }
});

document.addEventListener('click', (event) => {
  const link = event.target.closest('a[data-turbo-frame="notifications_content"]');
  if (link) {
    sessionStorage.setItem('notifications_scroll', window.scrollY);
  }
});
</script>
